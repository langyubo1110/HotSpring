<form class="layui-form" name="movieform">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>保养生成任务表</h5>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">
                    <div class="layui-inline">
                        <label class="layui-form-label" style="width:90px">选择日期</label>
                        <div class="layui-input-inline">
                            <input type="text" class="layui-input" id="selecttime" placeholder="yyyy-MM-dd">
                        </div>
                    </div>
                    <table id="demo" lay-filter="test"></table>
                </div>
            </div>
        </div>
    </div>
</form>
<!--js模板  表头组件-->
<script type="text/html" id="toolbarDemo">
    <div class="layui-btn-container">
        <input type="button" class="layui-btn layui-btn-sm" lay-submit="" lay-filter="btndown" lay-event="selectpeople" value="选择实施人">
    </div>
</script>

<script>
    //layui 注册多个模块
    layui.use(['table', 'util', 'laydate'], function () {
        //实例化多个模块
        var table = layui.table
        var util = layui.util
        var laydate = layui.laydate;
        //1.渲染实例
        table.render({
            elem: '#demo'
            , height: 550
            , width: 1220
            , url: '/equupkeeptask/Query' //数据接口
            , id: 'idTest'
            , response: {
                statusName: 'code' //规定数据状态的字段名称，默认：code
                , statusCode: 200 //规定成功的状态码，默认：0
                , msgName: 'msg' //规定状态信息的字段名称，默认：msg
                , countName: 'count' //规定数据总数的字段名称，默认：count
                , dataName: 'data' //规定数据列表的字段名称，默认：data
            }
            , page: {
                page: 1,
                limit: 10
            }//开启分页
            , toolbar: "#toolbarDemo"
            , cols: [[ //表头
                { type: 'checkbox', fixed: 'left' }
                , { field: 'name', title: '设备名称' }
                , { field: 'location', title: '设备位置' }
                , { field: 'ename', title: '执行人' }
                , { field: 'task_name', title: '任务名称' }
                , {
                    field: 'upkeep_time', title: '保养生成时间', templet: function (d) {
                        return util.toDateString(d.upkeep_time.replace("/Date(", "").replace(")/", ""), "yyyy-MM-dd")
                    }
                }
                , {
                    field: 'interval', title: '保养间隔', templet: function (d) {
                        return d.interval + "天"
                    }
                }
                , { field: 'task_info', title: '任务详情' }
                , { field: 'upkeep_feedback_info', title: '反馈信息' }
               
            ]]
        });
        //表头触发事件
        table.on('toolbar(test)', function (obj) {
            //添加
            if (obj.event == "selectpeople") {
                //获取选中行的数据
                var checkStatus = table.checkStatus('idTest'); //idTest 即为基础参数 id 对应的值
                console.log(checkStatus)
                let data = checkStatus.data
                let arrid = []
                for (var item of data) {
                    arrid.push(item.id)
                }
                var queryString = Object.keys(data).map(key => key + '=' + data[key].equ_plan_id+","+data[key].equ_id).join('&');
                console.log(queryString)
                //展示今日签到人员信息
                //弹出弹窗
                layer.open({
                    type: 2,
                    content: '/equupkeeptask/Sign?' + queryString,
                    area: ['500px', '700px'],
                    //layer层销
                    end: function () {
                        table.reload("idTest")
                    }
                });
            }//button
        });//表头触发事件

        //日期渲染
        laydate.render({
            elem: '#selecttime'
            , theme: '#393D49'
            , value: null
            , isInitValue: true
            , done: function (value) {
                console.log(value)
                table.reload("idTest", {
                    //获取文本款的值
                    where: {
                        //传参 文本框 设定异步数据接口参数外的值
                        time:value
                    }
                })
            }

        });
    })
</script>


