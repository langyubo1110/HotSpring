
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="ibox float-e-margins">
    <div class="ibox-content">
        <form role="form" class="layui-form form-inline"  lay-filter="editform">
            <div class="form-group">
                <input type="hidden" name="id" />
                商品名称：<input type="text" name="goods_name" lay-verify="required" placeholder="请输入商品名称" class="form-control">
            </div>
            &nbsp;&nbsp;&nbsp;
            <div class="form-group">
                图片：<input type="text" name="picture" placeholder="请输入图片名" class="form-control">
            </div>
            <br /> <br />
            <div class="form-group">
                商品数量：<input type="text" name="goods_number" lay-verify="required" placeholder="请输入商品数量" class="form-control">
            </div>
            &nbsp;&nbsp;&nbsp;
            <div class="form-group">
                厂家：<input type="text" name="factory" placeholder="请输入厂家" class="form-control">
            </div>
            <br /> <br />
            <div class="form-group">
                创建时间：<input type="text" name="create_time" lay-verify="required" placeholder="请输入创建时间" class="form-control">
            </div>
            &nbsp;&nbsp;&nbsp;
            <div class="form-group">
                阈值：<input type="text" name="threshold" placeholder="请输入阈值" class="form-control">
            </div>
            <br /> <br />
            <div class="layui-form-item">
                <div class="layui-input-block">
                    <button type="submit" class="layui-btn" lay-filter="demo1">立即提交</button>
                    <button type="reset" class="layui-btn layui-btn-primary">重置</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    layui.use(['form', 'util'], function (){
        var form = layui.form;
        var util = layui.util;
        var $ = layui.jquery;
        var id =@ViewBag.id;
        $.post("/repogoodsstock/getmodel", { id: id }, function (res) {
            if (res.code == 200) {
                console.log(1)
                res.data.create_time = util.toDateString(res.data.create_time.replace("/Date(", "").replace(")/", ""), "yyyy-MM-dd");
                  console.log(res.data)
                form.val('editform', res.data);
            }
        })
        form.on('submit(demo1)', function (data) {
            if (id == 0) {
                $.post("/repogoodsstock/add", { repoGoodsStock: data.field }, function (res) {
                    if (res.code == 200)
                    {
                        var index = parent.layer.getFrameIndex(window.name);
                        parent.layer.close(index);
                        parent.layer.table.reload("demo");
                        parent.layui.layer.msg(res.msg);
                    }
                })
            }
            else
            {
                $.post("/repogoodsstock/update", { repoGoodsStock: data.field }, function (res) {
                    console.log(res)
                    if (res.code == 200) {
                        //找到父页面的自己  拿到index 让父页面关掉自己
                        var index = parent.layer.getFrameIndex(window.name);
                        parent.layer.close(index);
                        parent.layui.table.reload("demo");//子窗体让父窗体table重载
                        parent.layer.msg(res.msg)
                    }
                })
            }
            return false;
        })
    })
</script>
