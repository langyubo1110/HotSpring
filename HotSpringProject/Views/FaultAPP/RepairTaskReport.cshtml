
@{
    ViewBag.Title = "RepairTaskReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}                                      
<div class="ibox-content">
    <form class="layui-form" action="" lay-filter="editform">
        <div class="layui-form-item">
            <div class="form-group layui-inline">
                <label>上报人ID</label>
                <input type="text" name="reporter_id" placeholder="上报人ID" class="form-control">
            </div>
            <div class="form-group layui-inline">
                <label>设备损坏时间</label>
                <input type="datetime" name="start_time" placeholder="设备损坏时间" class="form-control">
            </div>
            <div class="form-group layui-inline">
                <label>维修结束时间</label>
                <input type="datetime" name="end_time" placeholder="维修结束时间" class="form-control">
            </div>
            <div class="form-group layui-inline">
                <label>确认人</label>
                <input type="text" name="confirmer" placeholder="确认人" class="form-control">
            </div>
        </div>
        <div class="layui-form-item">
            <div class="form-group layui-inline">
                <label>维修地点</label>
                <input type="text" name="location" placeholder="维修地点" lay-verify="required" id="ApplyTime" class="form-control">

            </div>
            <div class="form-group layui-inline">
                <label>创建时间</label>
                <input type="datetime" name="create_time" placeholder="创建时间" class="form-control">
            </div>
            <div class="layui-form-item layui-form-text">
                <label class="layui-form-label">工作内容</label>
                <div class="layui-input-block">
                    <textarea id="demo" name="work_context" placeholder="请输入工作内容" class="layui-textarea"></textarea>
                </div>
            </div>
        </div>
        <div class="form-group layui-inline">
            <button type="submit" class="layui-btn" id="btnSubmit" lay-submit="" lay-filter="demo1">添加</button>
            <button type="reset" class="layui-btn layui-btn-primary">重置</button>
        </div>
        <div class="layui-input-block">

        </div>
    </form>
</div>
<script>
    layui.use(['form'], function () {
        var form = layui.form;
        var $ = layui.jquery;
        // 监听表单提交
        form.on('submit(demo1)', function (data) {
            var formData = data.field; // 获取表单数据
            $.post("/repairtaskreport/add", formData, function (res) {
                if (res.code == 200) {
                    var index = parent.layer.getFrameIndex(window.name);
                    parent.layer.close(index);
                    parent.layui.table.reload("demo");//子窗体让父窗体table重载
                    parent.layer.msg(res.msg)
                }
            });
            return false; 
        });
    });
</script>