
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="layui-card">
                        <div class="layui-card-body">
                            <form class="layui-form" action="" lay-filter="searchForm">
                                <div class="layui-form-item">
                                    <div class="layui-form-item layui-inline">
                                        <div class="layui-input-inline">
                                            <input type="text" name="txtSGoodsID" placeholder="请输入商品ID" class="layui-input">
                                        </div>
                                    </div>
                                    <div class="layui-form-item layui-inline">
                                        <div class="layui-input-inline">
                                            <input type="text" name="txtSOutInPersonId" placeholder="请输入出入库人ID" class="layui-input">
                                        </div>
                                    </div>
                                    <div class="layui-form-item layui-inline">
                                        <div class="layui-input-inline">
                                            <input type="text" name="txtSType" placeholder="请输入出入库类型" class="layui-input">
                                        </div>
                                    </div>
                                    <div class="layui-form-item layui-inline">
                                        <button class="layui-btn" lay-submit="" lay-filter="btnSearch">
                                            <i class="layui-icon layui-icon-search"></i>
                                            查询
                                        </button>
                                        <button type="reset" class="layui-btn">
                                            <i class="layui-icon layui-icon-refresh"></i>
                                            重置
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="table-responsive">

                        <table id="demo" lay-filter="test"></table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--js模版表头工具栏-->
<script type="text/html" id="toolbarDemo">
    <div class="layui-btn-container">
        <button class="layui-btn layui-btn-sm" lay-event="out">出库</button>
        <button class="layui-btn layui-btn-sm" lay-event="in">入库</button>
    </div>
</script>
<!--操作单元格-->
<script type="text/html" id="barDemo">
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
</script>


<script>
    layui.use(['table', 'form', 'util', 'layer'], function () {
        var table = layui.table;
        var util = layui.util;
        var layer = layui.layer;
        var form = layui.form;
        var $ = layui.jquery;
        //表格渲染
        table.render({
            elem: '#demo'
            , height: 525
            , url: '/repooutinrecord/getlist' //数据接口
            , page: true//开启分页
            , toolbar: '#toolbarDemo'
            , cols: [[ //表头
                { field: 'id', title: '主键', sort: true, fixed: 'left' }
                , { field: 'goods_id', title: '商品ID', }
                , { field: 'goods_number', title: '商品数量' }
                , { field: 'outin_person_id', title: '出入库人ID' }
                , { field: 'type', title: '出入库类型', }
                , { field: 'create_time', title: '创建时间', templet: function (d) { return util.toDateString(d.create_time.replace("/Date(", "").replace(")/", ""), "yyyy-MM-dd") } }
                , { title: '操作', toolbar: '#barDemo' }
            ]]
            , parseData: function (res) { //res 即为原始返回的数据
                return {
                    "code": 0, //解析接口状态
                    "msg": res.message, //解析提示文本
                    "count": res.count, //解析数据长度
                    "data": res.data //解析数据列表
                };
            }
        });
        //行单击事件
        table.on('tool(test)', function (obj) {
            var id = obj.data.id;
            console.log(id)
            if (obj.event === 'del') {
                layer.confirm('真的删除行么', function (index) {
                    $.post('/repooutinrecord/delete', { id: id }, function (res) {
                        if (res.code = 200) {
                            layer.msg(res.msg)
                            obj.del();
                            table.reload('demo')
                        }
                        else {
                            layer.msg(e.msg)
                        }
                    })
                    layer.close(index)
                });
            }
        });
        table.on('toolbar(test)', function (obj) {
            if (obj.event == "out") {
                layer.open({
                    title: '商品出库',
                    type: 2,
                    area: ['800px', '300px'],
                    content: '/repooutinrecord/outdetail/'
                })
            }
            else if (obj.event == "in")
            {
                layer.open({
                    title: '商品入库',
                    type: 2,
                    area: ['800px', '300px'],
                    content: '/repooutinrecord/indetail/'
                })
            }
        })
        //搜索工具栏
        form.on('submit(btnSearch)', function (data) {
            //表格重载 where 再加一个参数name
            console.log(data)
            table.reload('demo', {
                where: {
                    goods_id: data.field.txtSGoodsID,
                    outin_person_id: data.field.txtSOutInPersonId,
                    type: data.field.txtSType
                }
            })
             return false;
        });
    })
</script>






