
@{
    ViewBag.Title = "EmployRoleManager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="layui-hide" id="test" lay-filter="test"></table>
<script type="text/html" id="barDemo">
    <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
</script>
<script>
    layui.use('table', function () {
        var table = layui.table;
        //表格渲染
        table.render({
            elem: '#test'
            , url: '/employrole/getemployrole'
            , toolbar: '#toolbarDemo'
            , response: {
                statusName: 'code' //规定数据状态的字段名称，默认：code
                , statusCode: 200 //规定成功的状态码，默认：0
                , msgName: 'msg' //规定状态信息的字段名称，默认：msg
                , countName: 'count' //规定数据总数的字段名称，默认：count
                , dataName: 'data' //规定数据列表的字段名称，默认：data
            }
            , page: {
                page: 1,
                limit: 5
            }
            , cols: [[
                  { field: 'id', title: '主键', sort: true, fixed: 'left' }
                , { field: 'role_name', title: '职位' }
                , {
                    field: 'role', title: '是否领导', templet: function (d) {
                        return d.role === 0 ? '是' : '否';
                    }
                }
                , { field: 'Salary', title: '底薪' }
                , { field: 'Labor_hours ', title: '工时费' }
                , {
                    field: 'create_time', title: '创建时间'
                    , templet: function (d) {
                        return util.toDateString(d.create_time.replace("/Date(", "").replace(")/", ""), "yyyy-MM-dd")
                    }
                }
            ]]
        })
</script>
