                            obj.del();
                            
                        }
                        else {
                            alert(res.msg)
                        }
                    })
                    layer.close(index);
                });
            }
            if (obj.event === 'edit') {
                let index = layer.open({
                    title: '编辑',
                    type: 2
                    , content: "/repairtaskreport/details/" + id
                    , area: ['500px', '700px']
                });

            }
        });
        //工具栏事件
        table.on('toolbar(test)', function (obj) {
            if (obj.event == "add") {
                let index = layer.open({
                    type: 2
                    , content: '/repairtaskreport/details'
                    , area: ['500px', '700px']
                    , anim: 2
                });
            }
            if (obj.event == "RepairTaskReport") {
                let index = layer.open({
                    type: 2
                    , content: '/repairtaskreport/repairtaskreport'
                    , area: ['500px', '700px']
                    , anim: 2
                });
            }
            if (obj.event == "RepairTaskList") {
                let index = layer.open({
                    type: 2
                    , content: '/repairtaskreport/repairtasklist'
                    , area: ['500px', '700px']
                    , anim: 2
                });
            }
        });
        //搜素  4
        form.on('submit(btnSearch)', function (data) {
            table.reload("demo", {
                where: {
                    reporter_id: data.field.txtreporter_id
                }
            })
            return false;
        })
    });
</script>
