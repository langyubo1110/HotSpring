@model IEnumerable<(int Id, string Name)>

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="ibox-content">
    <div class="ibox-content">
        <form class="layui-form" lay-filter="empForm">
            <div class="layui-form-item">
                <div class="layui-inline">
                    <input type="hidden" name="id" value="0" />
                    <label class="layui-form-label">页面名称</label>
                    <div class="layui-input-inline">
                        <input type="text" name="page_name" lay-verify="required" autocomplete="off" class="layui-input demo-phone">
                    </div>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">页面地址</label>
                    <div class="layui-input-inline">
                        <input type="text" name="page_address" lay-verify="required" autocomplete="off" class="layui-input demo-phone">
                    </div>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-upload">
                    <label class="layui-form-label">图标</label>
                    <button type="button" class="layui-btn" id="test1">上传图标</button>
                    <div class="layui-upload-list">
                        <img class="layui-upload-img" id="preview">
                        <p id="demoText"></p>
                    </div>
                    <input type="hidden" name="img_url" id="hfimg_url" value="" />
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">所属模块</label>
                    <select name="module_id">
                        <option value="0">请选择</option>
                        @foreach (var item in Model)
                        {
                            <option value="@item.Id" @(item.Id == ViewBag.id ? "selected" : "")>@item.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-input-block">
                    <input type="submit" class="layui-btn" lay-submit="" lay-filter="demo1" value="提交" />
                    <button type="reset" class="layui-btn layui-btn-primary">重置</button>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    layui.use(['form', 'util','layer','upload'], function () {
        var form = layui.form;
        var util = layui.util;
        var layer = layui.layer;
        var upload = layui.upload;
        var id =@ViewBag.Id;
        $.post("/SystemPages/getPages", { id: id }, function (res) {
            if (res.code == 200) {
                res.data.create_time = util.toDateString(res.data.create_time.replace("/Date(", "").replace(")/", ""), "yyyy-MM-dd");
                form.val('empForm', res.data);
            }
        });
        form.on('submit(demo1)', function (data) {
            let obj = data.field;
            console.log(data);
            if (id == 0) {
                $.post("/SystemPages/insert", { systemPages: obj }, function (res) {
                    if (res.code == 200) {
                        var index = parent.layer.getFrameIndex(window.name);
                        parent.layer.close(index);
                        parent.layui.table.reload('demo');
                        parent.layui.layer.msg(res.msg);
                    }
                })
            }
            else {
                $.post("/SystemPages/edit", { systemPages: obj }, function (res) {
                    if (res.code == 200) {
                        var index = parent.layer.getFrameIndex(window.name);
                        parent.layer.close(index);
                        parent.layui.table.reload('demo');
                        parent.layui.layer.msg(res.msg);
                    }
                })
            }
            return false;
        });

    })

</script>


